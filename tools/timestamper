#!/usr/bin/env python

import sys
from time import *

if len(sys.argv) == 3:
	if sys.argv[1] == "human":
		print strftime("%H:%M:%S %d-%m-%y", localtime(float(sys.argv[2])))
		exit(0)
	elif sys.argv[1] == "unix":
		print mktime(strptime(sys.argv[2], "%H:%M:%S %d-%m-%y"))
		exit(0)

print "Usage: %s MODE TIME" % sys.argv[0]
print "Convert from a unix time stamp to a readable time"
print "Mode can be either the string 'to' or 'from'"
print ""
print "human: 1340455142.0"
print "unix: 'HH:MM:SS DD-MM-YY'"
